{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Training Content Schema",
  "type": "object",
  "properties": {
    "CourseInfo": {
      "type": "object",
      "properties": {
        "Title": { "type": "string" },
        "Description": { "type": "string" },
        "Objective": { "type": ["string", "null"] },
        "TargetAudience": { "type": ["string", "null"] },
        "CourseImageUrl": { "type": "string" },
        "AudioDuration": { "type": "number" },
        "SpeechAudioUrl": { "type": "string" },
        "SpeechFileName": { "type": "string" }
      },
      "required": ["Title", "Description", "CourseImageUrl", "AudioDuration", "SpeechAudioUrl", "SpeechFileName"]
    },
    "Sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "PageStyle": { "type": "number" },
          "YoutubeSearchKeyword": { "type": ["string", "null"] },
          "Index": { "type": "number" },
          "Title": { "type": "string" },
          "Description": { "type": ["string", "null"] },
          "Content": { "type": "object" },
          "NarrationText": { "type": "string" },
          "Images": { "type": "array" },
          "YoutubeUrl": { "type": ["string", "null"] },
          "AudioDuration": { "type": "number" },
          "SpeechAudioUrl": { "type": "string" },
          "SpeechFileName": { "type": "string" },
          "RelevantDocumentPart": { "type": ["string", "null"] }
        },
        "required": ["PageStyle", "Index", "Title", "Content", "NarrationText", "Images", "AudioDuration", "SpeechAudioUrl", "SpeechFileName"]
      }
    },
    "GeneralQuiz": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "Index": { "type": "number" },
          "Type": { "type": "number" },
          "Question": { "type": "string" },
          "Options": { "type": ["array", "null"] },
          "CorrectAnswers": { "type": ["array", "null"] },
          "Statements": { "type": ["array", "null"] },
          "IsSuccess": { "type": "boolean" },
          "ErrorMessage": { "type": ["string", "null"] }
        },
        "required": ["Index", "Type", "Question", "IsSuccess"]
      }
    }
  },
  "required": ["CourseInfo", "Sections"]
}

